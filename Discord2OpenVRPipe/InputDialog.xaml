<Window x:Class="Discord2OpenVRPipe.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Discord2OpenVRPipe"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        MinWidth="300"
        MinHeight="100"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanMinimize">
    <StackPanel Margin="5">
        <TextBlock Name="inputLabel" Margin="5"/>
        <TextBox Name="textBoxValue" Margin="5"/>
        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
            <Button Name="buttonOk" IsDefault="True" Click="OkButtonClick" Margin="5" Padding="10 4 10 4">Ok</Button>
            <Button Name="buttonCancel" IsCancel="True" Margin="5" Padding="10 4 10 4">Cancel</Button>
        </StackPanel>
        
        <!-- <Label x:Name="labelValue" HorizontalContentAlignment="Right" Content="Label" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="45"/> -->
    </StackPanel>
</Window>
