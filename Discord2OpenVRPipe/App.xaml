<Application x:Class="Discord2OpenVRPipe.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Discord2OpenVRPipe"
             xmlns:converters="clr-namespace:Discord2OpenVRPipe.Converters">
    <Application.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10 5"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="2"/>
        </Style>
        <converters:BooleanToReverseConverter x:Key="BooleanToReverseConverter"/>
    </Application.Resources>
</Application>
